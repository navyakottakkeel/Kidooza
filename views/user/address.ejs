<%-include("../../views/partials/user/header") %>

<link href="/css/address.css" rel="stylesheet">


    <div class="container" style="margin-top:180px">
        <div class="row">
            <!-- Left Sidebar -->
            <div class="col-md-3">
                <div class="list-group shadow-sm rounded-4 overflow-hidden" style="border: 1px solid #e0e0e0;">

                    <!-- Header -->
                    <div class="list-group-item fw-bold text-center py-3" style="background: linear-gradient(135deg, #f5f5f5, #e0e0e0); 
                   color: #444; 
                   font-size: 1.1rem; 
                   letter-spacing: 0.5px;">
                        <i class="fas fa-user-circle me-2"></i> My Account
                    </div>

                    <!-- Links -->
                    <a href="/userProfile" class="list-group-item list-group-item-action py-3"
                        style="border: none; font-size: 0.95rem;">
                        <i class="fas fa-user me-2 text-primary"></i> My Profile
                    </a>

                    <a href="/address" class="list-group-item list-group-item-action py-3"
                        style="border: none; font-size: 0.95rem;">
                        <i class="fas fa-map-marker-alt me-2 text-success"></i> Address
                    </a>

                    <a href="/orders" class="list-group-item list-group-item-action py-3"
                        style="border: none; font-size: 0.95rem;">
                        <i class="fas fa-box me-2 text-warning"></i> My Orders
                    </a>

                    <a href="/wallet" class="list-group-item list-group-item-action py-3"
                        style="border: none; font-size: 0.95rem;">
                        <i class="fas fa-wallet me-2 text-info"></i> Wallet
                    </a>

                    <a href="/profile-change-password" class="list-group-item list-group-item-action py-3"
                        style="border: none; font-size: 0.95rem;">
                        <i class="fas fa-key me-2 text-secondary"></i> Change Password
                    </a>

                    <a href="/logout" class="list-group-item list-group-item-action text-danger py-3 fw-bold"
                        style="border: none; font-size: 0.95rem;">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card shadow-sm rounded-3">
                    <div class="card-header d-flex justify-content-between align-items-center"
                        style="    background-color: #e4e1d7;">
                        <h5 class="mb-0 fw-bold">Address</h5>
                    </div>

                    <div class="card-body row address-card p-3 border rounded mb-3">
                        <% if (addresses.length===0) { %>
                            <p>No address available.</p>
                            <% } else { %>
                                <% addresses.forEach(addr=> { %>
                                    <div class="card mb-3 p-3">
                                        <p><strong>
                                                <%= addr.name %>
                                            </strong> (<%= addr.addressType %>)</p>
                                        <p>
                                            <%= addr.city %>, <%= addr.landmark %>,<br>
                                                    <%= addr.state %> - <%= addr.pincode %>
                                        </p>
                                        <p>Phone: <%= addr.phone %>
                                                <% if (addr.altPhone) { %>, Alt: <%= addr.altPhone %>
                                                        <% } %>
                                        </p>

                                        <!-- Buttons Below Address -->
                                        <div class="d-flex gap-2 mt-2">
                                            <button class="btn btn-outline-primary btn-sm editAddressBtn"
                                                data-id="<%= addr._id %>" data-type="<%= addr.addressType %>"
                                                data-name="<%= addr.name %>" data-city="<%= addr.city %>"
                                                data-landmark="<%= addr.landmark %>" data-state="<%= addr.state %>"
                                                data-pincode="<%= addr.pincode %>" data-phone="<%= addr.phone %>"
                                                data-altphone="<%= addr.altPhone %>">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm"
                                                onclick="deleteAddress('<%= addr._id %>')">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </div><br>

                                        <!-- Default shipping address checkbox -->
                                        <% if (!addr.isDefault) { %>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                    id="default_<%= addr._id.toString() %>"
                                                    onchange="setDefaultAddress('<%= addr._id.toString() %>')">
                                                <label class="form-check-label"
                                                    for="default_<%= addr._id.toString() %>">
                                                    Make this your default shipping address
                                                </label>
                                            </div>
                                            <% } else { %>
                                                <span class="badge bg-success"
                                                    id="badge_<%= addr._id.toString() %>">Default Shipping
                                                    Address</span>
                                                <% } %>

                                    </div>
                                    <% }) %>
                                        <% } %>

                                            <a href="#" id="addNewLink">Add New Address</a>

                                            <form id="addressForm" class="mt-4" style="display:none;">
                                                <input type="hidden" name="addressId" id="addressId" value="">
                                                <div class="mb-3">
                                                    <label>Address Type</label>
                                                    <select name="addressType" id="addressType" class="form-control">
                                                        <option value="Home">Home</option>
                                                        <option value="Office">Office</option>
                                                    </select>

                                                </div>
                                                <div class="mb-3">
                                                    <label>Name</label>
                                                    <input type="text" name="name" id="name" class="form-control">
                                                </div>
                                                <div class="mb-3">
                                                    <label>City</label>
                                                    <input type="text" name="city" id="city" class="form-control">
                                                </div>
                                                <div class="mb-3">
                                                    <label>Landmark</label>
                                                    <input type="text" name="landmark" id="landmark"
                                                        class="form-control">
                                                </div>
                                                <div class="mb-3">
                                                    <label>State</label>
                                                    <input type="text" name="state" id="state" class="form-control">
                                                </div>
                                                <div class="mb-3">
                                                    <label>Pincode</label>
                                                    <input type="number" name="pincode" id="pincode"
                                                        class="form-control">
                                                </div>
                                                <div class="mb-3">
                                                    <label>Phone</label>
                                                    <input type="text" name="phone" id="phone" class="form-control">
                                                </div>
                                                <div class="mb-3">
                                                    <label>Alt Phone</label>
                                                    <input type="text" name="altPhone" id="altPhone"
                                                        class="form-control">
                                                </div>
                                                <button type="button" class="btn btn-success"
                                                    onclick="saveAddress()">Save</button>
                                                <button type="button" class="btn btn-secondary"
                                                    id="cancelForm">Cancel</button>
                                            </form>
                    </div>
                </div>
            </div>
        </div>


        <form id="addressForm">
            <!-- your form fields -->
        </form>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>

            function saveAddress() {

                const addressId = document.getElementById("addressId").value;

                const data = {
                    addressType: document.getElementById("addressType").value,
                    name: document.getElementById("name").value,
                    city: document.getElementById("city").value,
                    landmark: document.getElementById("landmark").value,
                    state: document.getElementById("state").value,
                    pincode: document.getElementById("pincode").value,
                    phone: document.getElementById("phone").value,
                    altPhone: document.getElementById("altPhone").value
                };


                // ✅ Basic validation
                if (!data.name || !data.city || !data.state || !data.pincode || !data.phone) {
                    Swal.fire({
                        icon: "error",
                        title: "Missing Fields",
                        text: "Please fill in all required fields (Name, City, State, Pincode, Phone)."
                    });
                    return;
                }

                if (!/^\d{6}$/.test(data.pincode)) {
                    Swal.fire({
                        icon: "error",
                        title: "Invalid Pincode",
                        text: "Pincode must be a 6-digit number."
                    });
                    return;
                }

                if (!/^\d{10}$/.test(data.phone)) {
                    Swal.fire({
                        icon: "error",
                        title: "Invalid Phone",
                        text: "Phone number must be 10 digits."
                    });
                    return;
                }

                if (data.altPhone && !/^\d{10}$/.test(data.altPhone)) {
                    Swal.fire({
                        icon: "error",
                        title: "Invalid Alt Phone",
                        text: "Alt phone must be 10 digits."
                    });
                    return;
                }

                let url = "/address/save";
                let method = "POST";

                if (addressId) { // editing
                    url = `/address/${addressId}`;
                    method = "PATCH";
                }

                fetch(url, {
                    method: method,
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: "success",
                                title: "Address Saved",
                                text: "Your address has been saved successfully!",
                                confirmButtonText: "OK"
                            }).then(() => {
                                window.location.href = "/address"; // redirect to address page
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Oops!",
                                text: data.message || "Something went wrong"
                            });
                        }
                    })
                    .catch(err => {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: err.message
                        });
                    });
            }

        </script>


        <script>
            const form = document.getElementById("addressForm");
            const addNewLink = document.getElementById("addNewLink");
            const cancelForm = document.getElementById("cancelForm");

            addNewLink.addEventListener("click", () => {
                form.reset();
                document.getElementById("addressId").value = "";
                form.style.display = "block";
            });

            cancelForm.addEventListener("click", () => {
                form.style.display = "none";
            });


            function deleteAddress(id) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "This address will be permanently deleted.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/address/${id}`, { method: "DELETE" })
                            .then(res => res.json())
                            .then(data => {
                                if (data.success) {
                                    Swal.fire("Deleted!", "Your address has been deleted.", "success")
                                        .then(() => location.reload());
                                } else {
                                    Swal.fire("Error!", data.message || "Unable to delete address", "error");
                                }
                            });
                    }
                });
            }

            function setDefaultAddress(addressId) {
                fetch(`/address/${addressId}/default`, {
                    method: 'PATCH',
                    headers: { "Content-Type": "application/json" }
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Default address updated',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => location.reload());
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Failed to update',
                                text: data.message || 'Something went wrong'
                            });
                        }
                    })
                    .catch(() => {
                        Swal.fire({
                            icon: 'error',
                            title: 'Network error',
                            text: 'Please try again'
                        });
                    });
            }



            document.addEventListener('DOMContentLoaded', function () {
                document.querySelectorAll('.editAddressBtn').forEach(btn => {
                    btn.addEventListener('click', function () {
                        let addressId = this.dataset.id;
                        const currentType = this.dataset.type || "Home";

                        Swal.fire({
                            title: 'Edit Address',
                            width: '800px',
                            html: `
        <select id="swal-type" class="swal2-input" style="width: 85%;">
      <option value="Home" ${currentType === "Home" ? "selected" : ""}>Home</option>
      <option value="Office" ${currentType === "Office" ? "selected" : ""}>Office</option>
    </select>
          <input id="swal-name" class="swal2-input" placeholder="Name" value="${this.dataset.name}" style="width: 85%;">
          <input id="swal-city" class="swal2-input" placeholder="City" value="${this.dataset.city}" style="width: 85%;">
          <input id="swal-landmark" class="swal2-input" placeholder="Landmark" value="${this.dataset.landmark}" style="width: 85%;">
          <input id="swal-state" class="swal2-input" placeholder="State" value="${this.dataset.state}" style="width: 85%;">
          <input id="swal-pincode" type="number" class="swal2-input" placeholder="Pincode" value="${this.dataset.pincode}" style="width: 85%;">
          <input id="swal-phone" type="number" class="swal2-input" placeholder="Phone" value="${this.dataset.phone}" style="width: 85%;">
          <input id="swal-alt" type="number" class="swal2-input" placeholder="Alt Phone" value="${this.dataset.alt}" style="width: 85%;">
        `,
                            showCancelButton: true,
                            confirmButtonText: 'Update',
                            focusConfirm: false,
                            preConfirm: () => {
                                const name = document.getElementById('swal-name').value.trim();
                                const city = document.getElementById('swal-city').value.trim();
                                const state = document.getElementById('swal-state').value.trim();
                                const pincode = document.getElementById('swal-pincode').value.trim();
                                const phone = document.getElementById('swal-phone').value.trim();
                                const altPhone = document.getElementById('swal-alt').value.trim();

                                if (!name || !city || !state || !pincode || !phone) {
                                    Swal.showValidationMessage("All required fields must be filled.");
                                    return false;
                                }

                                if (!/^\d{6}$/.test(pincode)) {
                                    Swal.showValidationMessage("Pincode must be 6 digits.");
                                    return false;
                                }

                                if (!/^\d{10}$/.test(phone)) {
                                    Swal.showValidationMessage("Phone number must be 10 digits.");
                                    return false;
                                }

                                if (altPhone && !/^\d{10}$/.test(altPhone)) {
                                    Swal.showValidationMessage("Alt phone must be 10 digits.");
                                    return false;
                                }

                                return {
                                    addressType: document.getElementById('swal-type').value,
                                    name,
                                    city,
                                    landmark: document.getElementById('swal-landmark').value,
                                    state,
                                    pincode,
                                    phone,
                                    altPhone
                                };
                            }
                        }).then(result => {
                            if (result.isConfirmed) {
                                fetch(`/address/${addressId}`, {
                                    method: 'PATCH',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(result.value)
                                })
                                    .then(res => {
                                        if (!res.ok) {  // if status is not 200-299
                                            throw new Error(`HTTP error! Status: ${res.status}`);
                                        }
                                        return res.json();
                                    }).then(data => {
                                        Swal.fire('Updated!', 'Address updated successfully.', 'success')
                                            .then(() => location.reload());
                                    })
                                    .catch(err => {
                                        Swal.fire('Error!', 'Something went wrong.', 'error');
                                    });
                            }
                        });
                    });
                });
            });


        </script>


        <%-include("../../views/partials/user/footer") %>