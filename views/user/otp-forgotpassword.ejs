<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Verification</title>
    <link rel="stylesheet" href="sweetalert2.min.css">

    <style>
        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            margin: 0;
            background-color: #f8f8f8;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            background-color: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 850px;
            max-width: 95%;
            height: 500px;
        }

        .left {
            width: 45%;
            background: url('../img/pswdotp.jpg') no-repeat center center;
            background-size: cover;
        }

        .right {
            width: 55%;
            padding: 25px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .right-side {
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 20px 30px;
            /* reduce padding */
            line-height: 1.4;
            /* reduce line spacing */
            gap: 10px;
            /* reduce space between lines */
        }

        .right-side h2 {
            margin-bottom: 10px;
        }

        .right-side p {
            margin-bottom: 6px;
        }


        h2 {
            margin-bottom: 10px;
            font-size: 26px;
            font-weight: bold;
        }

        p {
            font-size: 14px;
            color: #555;
            margin-bottom: 25px;
        }

        .otp-box {
            display: flex;
            justify-content: center;
            gap: 6px;
            /* Tighter spacing */
            margin: 10px 0;
        }

        .otp-box input {
            width: 40px;
            height: 45px;
            font-size: 18px;
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 8px;
        }


        .info {
            font-size: 13px;
            color: #333;
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .info span {
            color: #5e2ce6;
            cursor: pointer;
        }

        .confirm-btn {
            background-color: #6e6e6e;
            color: white;
            border: none;
            padding: 12px;
            font-size: 14px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            width: 100%;
            margin-bottom: 10px;
        }

        .back-link {
            font-size: 13px;
            text-align: center;
            color: #333;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                max-width: 90%;
            }

            .left {
                height: 200px;
                width: 100%;
            }

            .right {
                width: 100%;
            }

            .otp-box {
                justify-content: center;
                gap: 8px;
            }

            .info {
                flex-direction: column;
                text-align: center;
                gap: 5px;
            }
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="left"></div>
        <div class="right">
            <h2>Confirm with OTP</h2>
            <p>Please check your mail address for OTP</p>

            <form action="/forgotpassword-otp" id="otpForm">
                <div class="otp-box">
                    <input type="text" id="otp1" name="otp" maxlength="1" />
                    <input type="text" id="otp2" name="otp" maxlength="1" />
                    <input type="text" id="otp3" name="otp" maxlength="1" />
                    <input type="text" id="otp4" name="otp" maxlength="1" />
                    <input type="text" id="otp5" name="otp" maxlength="1" />
                    <input type="text" id="otp6" name="otp" maxlength="1" />
                </div>



                <div class="info">
                    <div>Remaining Time: <span id="timer">01:00s</span></div>
                    <div>Didn't receive code? <span onclick="resendOTP()">Resend</span></div>
                </div>

                <button class="confirm-btn" type="submit">Confirm</button>
                <a href="/login" class="back-link">Go back to Login page</a>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    <script>
        // Timer Script
        let timeLeft = 60;
        const timerEl = document.getElementById('timer');

        const countdown = setInterval(() => {
            timeLeft--;
            let minutes = String(Math.floor(timeLeft / 60)).padStart(2, '0');
            let seconds = String(timeLeft % 60).padStart(2, '0');
            timerEl.textContent = `${minutes}:${seconds}s`;

            if (timeLeft <= 0) {
                clearInterval(countdown);
                timerEl.textContent = "00:00s";
            }
        }, 1000);




        function resendOTP() {
            fetch("/resendForgotPasswordOtp", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                }
            })
                .then(res => {
                    console.log("Fetch status:", res.status); // Add this line
                    return res.json();
                }).then(response => {
                    console.log("Resend response:", response); // Add this line
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP Resent",
                            text: response.message,
                            timer: 1500,
                            showConfirmButton: false
                        });
                        
                        // Reset timer
                        timeLeft = 60;
                        timerEl.textContent = "01:00s";
                        countdown = setInterval(() => {
                            timeLeft--;
                            let minutes = String(Math.floor(timeLeft / 60)).padStart(2, '0');
                            let seconds = String(timeLeft % 60).padStart(2, '0');
                            timerEl.textContent = `${minutes}:${seconds}s`;

                            if (timeLeft <= 0) {
                                clearInterval(countdown);
                                timerEl.textContent = "00:00s";
                            }
                        }, 1000);

                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Failed to Resend",
