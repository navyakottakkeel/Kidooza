    const data = await response.json();

    if (!data.success || data.reviews.length === 0) {
      reviewContainer.innerHTML = `<p>No reviews yet. Be the first to write one!</p>`;
      return;
    }

    const reviews = data.reviews;
    let currentIndex = 0;

