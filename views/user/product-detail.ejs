                    <img src="<%= image %>"
                         class="thumbnail-img <%= index === 0 ? 'active' : '' %>"
                         data-index="<%= index %>"
                         onclick="changeMainImage(this, '<%= image %>')" /><br>
                  <% }); %>          
                </div>
                
                <!-- Main Image -->
